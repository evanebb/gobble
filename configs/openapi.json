              }
            }
          }
        }
      }
    },
    "schemas": {
      "Profile": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "ubuntu-22.04"
          },
          "description": {
            "type": "string",
            "example": "Ubuntu 22.04"
          },
          "kernel": {
            "type": "string",
            "example": "http://example.local/kernel"
          },
          "initrd": {
            "type": "string",
            "example": "http://example.local/initrd.img"
          },
          "kernelParameters": {
            "$ref": "#/components/schemas/KernelParameters"
          }
        }
      },
      "ProfileResponse": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              }
            }
          },
          {
            "$ref": "#/components/schemas/Profile"
          }
        ]
      },
      "System": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "example": "ubuntu-22.04"
          },
          "description": {
            "type": "string",
            "example": "Ubuntu 22.04"
          },
          "profile": {
            "type": "string",
            "format": "uuid"
          },
          "kernelParameters": {
            "$ref": "#/components/schemas/KernelParameters"
          }
        }
      },
      "SystemResponse": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              }
            }
          },
          {
            "$ref": "#/components/schemas/System"
          }
        ]
      },
      "KernelParameters": {
        "type": "array",
        "example": [
          "initrd=initrd.img",
          "noquiet"
        ]
      },
      "PxeConfig": {
        "type": "string",
        "example": "#!ipxe\n\nkernel http://example.local/kernel initrd=initrd.img\ninitrd http://example.local/initrd.img\n\nboot\n"
      },
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "admin"
          },
          "password": {
            "description": "Plain-text password, of which the hash will be saved",
            "type": "string",
            "format": "password",
            "example": "admin"
          }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "example": "admin"
          }
        }
      }
    }
  }
